    <script>
        function fillBlank(element, answer) {
            if (!element.classList.contains('filled')) {
                element.textContent = answer;
                element.classList.add('filled');
                
                // Add a little celebration effect
                element.style.transform = 'scale(1.2)';
                setTimeout(() => {
                    element.style.transform = 'scale(1)';
                }, 200);
            }
        }

        function resetAllBlanks() {
            const blanks = document.querySelectorAll('.blank');
            blanks.forEach(blank => {
                blank.textContent = '_____';
                blank.classList.remove('filled');
            });
            
            // Add a little animation to show reset
            document.querySelector('.mind-map').style.transform = 'scale(0.98)';
            setTimeout(() => {
                document.querySelector('.mind-map').style.transform = 'scale(1)';
            }, 150);
        }
    </script>
